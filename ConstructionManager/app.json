{
  "expo": {
    "name": "Construction Manager",
    "slug": "construction-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFC107"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.constructionmanager.app",
      "infoPlist": {
        "NSCalendarsUsageDescription": "This app needs access to your calendar to sync project schedules.",
        "NSRemindersUsageDescription": "This app needs access to reminders for project tasks.",
        "NSCameraUsageDescription": "This app needs access to camera to take photos of project progress.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select project images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFC107"
      },
      "package": "com.constructionmanager.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FFC107"
        }
      ],
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "construction-manager-uuid"
      }
    }
  }
}